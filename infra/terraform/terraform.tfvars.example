# ─────────────────────────────────────────────────────────────────
# Terraform Variables - EXAMPLE
# Copy to terraform.tfvars and fill in your values:
#   cp terraform.tfvars.example terraform.tfvars
#
# Secrets are loaded from .env.secrets via infra-up.sh:
#   export TF_VAR_proxmox_password="$PROXMOX_PASSWORD"
#   export TF_VAR_lxc_root_password="$LXC_ROOT_PASSWORD"
# ─────────────────────────────────────────────────────────────────

# Proxmox connection
proxmox_endpoint = "https://192.168.1.1:8006"
proxmox_node     = "proxade"
proxmox_username = "root@pam"
# proxmox_password → set via TF_VAR_proxmox_password (from .env.secrets)

# LXC config
lxc_template        = "local:vztmpl/debian-12-standard_12.7-1_amd64.tar.zst"
ssh_public_key_path = "~/.ssh/id_rsa.pub"
# lxc_root_password → set via TF_VAR_lxc_root_password (from .env.secrets)

# Network
bridge  = "vmbr0"
gateway = "192.168.1.254"

# Storage
storage   = "Storage"
disk_size = 32

# K3s Server
server_vmid   = 400
server_ip     = "192.168.1.40"
server_cpu    = 4
server_memory = 4096

# K3s Agents
agent_count      = 2
agent_vmid_start = 401
agent_ips        = ["192.168.1.41", "192.168.1.42"]
agent_cpu        = 4
agent_memory     = 3072
